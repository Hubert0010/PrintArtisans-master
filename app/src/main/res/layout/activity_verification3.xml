<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    tools:context=".Verification">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/retour"
        android:src="@drawable/retour"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:src="@drawable/verification"
        android:id="@+id/regis"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registration"
        android:text="Verification"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_bold"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter 4 digit number that sent in in your mailbox"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/gelasio_medium"/>

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:id="@+id/rect"
        android:layout_marginTop="70dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/rectangle"/>

    <EditText
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-180dp"
        android:background="@drawable/edit_text3"
        android:text="8"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="-48dp"
        android:background="@drawable/edit_text3"
        android:text="7"
        android:textColor="@color/black"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="-48dp"
        android:background="@drawable/edit_text2"
        android:text="3"
        android:textColor="@color/black"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-48dp"
        android:background="@drawable/edit_text3"
        android:text="0"
        android:textColor="@color/gris"
        android:textAlignment="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="65dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:layout_width="200dp"
        android:id="@+id/end"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Resend this code in 0:30"
        android:textColor="@color/black"
        android:textSize="14sp" />


</LinearLayout>